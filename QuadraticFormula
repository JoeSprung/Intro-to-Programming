
/**
 * This is in fact the quadratic formula.
 *
 * @author (your name)
 * @version (a version number or a date)
 */
import java.util.Scanner;
public class QuadraticFormula
{
    public static void main(String [] args)
    {
        System.out.println("Wow, Quadratic Formula? Epic.");
        Scanner in = new Scanner(System.in);//Required line
        System.out.print("please enter a value for a : ");
        double a = in.nextDouble();
        System.out.print("please enter a value for b : ");
        double b = in.nextDouble();
        System.out.print("please enter a value for c : ");
        double c = in.nextDouble();
        System.out.print((-b + (Math.sqrt(Math.pow(b,2)-(4*a*c))))/(2*a));
        System.out.print((-b - (Math.sqrt(Math.pow(b,2)-(4*a*c))))/(2*a));
    }
}
